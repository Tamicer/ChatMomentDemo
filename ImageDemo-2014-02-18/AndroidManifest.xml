    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:name="com.loveplusplus.demo.image.MyApplication"
        android:icon="@drawable/weixinpyq"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.loveplusplus.demo.image.MainActivity"
            android:label="@string/app_pengyouquan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.loveplusplus.demo.image.ImagePagerActivity"
            android:theme="@style/AppTheme.NoTitleBar" />
    </application>

</manifest>